<setion class="inner">
  <h2 class="secion-ttl">新規会員登録</h2>

  <%= form_with model: @customer, url: registration_path(resource_name), local: true do |f| %>
  <!--エラーメッセージ出すためにlocal: trueでページリロードが必要-->
    <%= render "layouts/error_messages", resource: @customer %>
    <!--デフォルトのpublic/shared/error_messagesからleyout配下に変更-->
    <table>
      <thead>
        <tbody>
          <tr>
            <td>名前</td>
            <td><%= f.label :first_name, "(姓)", class: "customer_name" %> <%= f.text_field :first_name, autofocus: true, :placeholder => "" %></td>
            <!--?ここだけclass与える?,autofocus: trueで初期状態が入力待ち-->
            <td><%= f.label :last_name, "(名)", class: "customer_name" %> <%= f.text_field :last_name, :placeholder => "" %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= f.label :first_name_kana, "(セイ)" %> <%= f.text_field :first_name_kana, :placeholder => "" %></td>
            <td><%= f.label :last_name_kana, "(メイ)" %> <%= f.text_field :last_name_kana, :placeholder => "" %></td>
          </tr>
          <tr>
            <td><%= f.label :email, "メールアドレス" %></td>
            <td colspan="2"><%= f.email_field :email, autocomplete: "email" %></td>
            <!--autocomplete: "email"で入力予想を提案-->
          </tr>
          <tr>
            <td><%= f.label :postal_code, "郵便番号(ハイフンなし7桁)" %></td>
            <td colspan="2"><%= f.text_field :postal_code, :placeholder =>"", class: "jpostal_code" %></td>
          </tr>
          <tr>
            <td><%= f.label :address, "住所(郵便番号から自動入力)" %></td>
            <td colspan="2"><%= f.text_field :address, class: "jpostal_address" %></td>
          </tr>
          <tr>
            <td><%= f.label :telephone_number, "電話番号(ハイフンなし10or11桁)" %></td>
            <td colspan="2"><%= f.text_field :telephone_number, :placeholder =>"" %></td>
          </tr>
          <tr>
            <td><%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)" %></td>
            <td colspan="2"><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
            <td colspan="2"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td></td>
            <td colspan="2"><%= f.submit "新規登録", class: "btn btn-success" %></td>
          </tr>
        </tbody>
      </thead>
    </table>
  <% end %>

  <h2 class="section-ttl">既に登録済みの方</h2>
  <p><%= link_to "こちら", new_customer_session_path, class: "underline" %>からログインしてください。</p>
</setion>
<%#= render "public/shared/links" %>
