<h2>商品新規登録</h2>

  <%= form_with model: @item, url: "admin_items_path", method: :post, local: true do |f| %>
  <!--admin/items#createのパスを指定-->

    <h4>商品画像</h4>
      <div><%= f.file_field :image, accept: "image/*" %></div>

      <table>
        <thead>
          <tr>
					<th></th>
					<th></th>
  				</tr>
  			</thead>
  			<tbody>
  			  <tr>
  			    <td><%= f.label :name, "商品名" %></td>
  				  <td><%= f.text_field :name %></td>
  			  </tr>
    			<tr>
    			  <td><%= f.label :introduction, "商品説明" %></td>
    			  <td><%= f.text_field :introduction %></td>
    			</tr>
          <tr>
  					<td><%= f.label :genre_id, "ジャンル" %></td>
  					<td><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
  				</tr>
        　<tr>
        　   <td><%= f.label :price, "税抜価格" %></td>
        　   <td><%= f.text_field :price %></td>
        　<tr>
  					<td><%= f.label :sales_status, "販売ステータス" %></td>
  					<td class="select_field">
  						<%= f.radio_button :is_active, true %>
  						<%= f.label :is_active, "販売中", class: "text-active" %>
  						<%= f.radio_button :is_active, false %>
  						<%= f.label :is_active, "販売停止中", class: "text-invalid" %>
  					</td>
  				</tr>

        </tbody>
      </table>
    <%= f.submit '新規登録' %>
  <% end %>